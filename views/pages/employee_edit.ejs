<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="class="container-fluid"">

<header>
    <% include ../partials/header %>
</header>

<main class="container">
          
              <!-- Modal content-->
              <form method="post" action="/admin/employee/<%= user.id %>">
                <input type="hidden" name="_method" value="put" />
              <div class="">
                <div class="modal-header">
                  <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
                  <h4 class="modal-title">Edit Employee</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" value="<%= user.id %>" name="id" class="form-control" id="id">
                    <div class="form-group">
                      <label for="email">First Name:</label>
                      <input type="text" value="<%= user.firstName %>" name="first_name" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                      <label for="pwd">Last Name:</label>
                      <input type="text" value="<%= user.lastName %>" name="last_name" class="form-control" id="pwd">
                    </div>
                    
                    
                  </div>
                  <div class="modal-footer">
                      <button type="submit" class="btn btn-default">Submit</button>
                  <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
                </div>
              </div>
            </form>
            </div>
          </div>
</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
